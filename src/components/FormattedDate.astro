---
interface Props {
    date: Date;
}

const { date } = Astro.props;
// 2023-08-06

let auxDate = new Date(date);
const formattedDate = new Date(auxDate.setDate(auxDate.getDate() + 1));
---

<time datetime={formattedDate}>
    {
        formattedDate.toLocaleDateString('es-AR', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
        })
    }
</time>