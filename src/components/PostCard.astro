---
import FormattedDate from "./FormattedDate.astro";
import {Image} from "@astrojs/image/components";

const { post } = Astro.props
const { url } = post
const { id, title, date, author, image } = post.frontmatter

const { isRecommended } = Astro.props

---

<a href=`/${id}/`>
    {
        isRecommended &&
        <span class="text-my-dark text-sm font-bold uppercase tracking-widest">Recomendado</span>
    }
    <div class={ isRecommended && "my-recommended-hover"}>
        <Image
            src={image.src}
            alt={image.alt}
            width="1080"
            height=""
            fit="cover"
            quality={80}
            aspectRatio="16:9"
            class =
            {
                !isRecommended
                ? "my-hover-scale mb-2"
                : "rounded-none rounded-t-lg"
            }
        />
        <h4 class=
            {
                isRecommended
                ? "my-recommended-title"
                : "my-title"
            }
        >
            {title}
        </h4>
    </div>
</a>
<FormattedDate {date} />